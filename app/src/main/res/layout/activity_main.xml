<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/white"
    >


    <EditText
        android:id="@+id/edit_peso"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="230dp"
        android:layout_marginEnd="20dp"
        android:hint="Peso"
        android:padding="20dp"
        android:textColor="@color/azulClaro"
        android:textColorHint="@color/azulEscuro"
        />

    <EditText
        android:id="@+id/edit_altura"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edit_peso"
        android:layout_alignStart="@+id/edit_peso"
        android:layout_alignEnd="@+id/edit_peso"
        android:layout_marginStart="0dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="0dp"
        android:hint="Altura"
        android:padding="20dp"
        android:textColor="@color/azulClaro"
        android:textColorHint="@color/azulEscuro"
        />

    <Button
        android:id="@+id/bt_calcular"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/edit_altura"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"
        android:elevation="2dp"
        android:radius="10dp"
        android:text="Calcular IMC"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:backgroundTint="#0099CC"
        android:background="@drawable/custom_button"
        />

    <ImageView
        android:id="@+id/img_delete"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/edit_altura"
        android:layout_alignEnd="@+id/edit_altura"
        android:layout_marginStart="0dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="0dp"
        android:layout_toEndOf="@id/bt_calcular"
        android:src="@drawable/ic_delete"
        />

    <TextView
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/edit_peso"
        android:layout_alignEnd="@+id/edit_peso"
        android:layout_marginStart="0dp"
        android:layout_marginTop="130dp"
        android:layout_marginEnd="0dp"
        android:gravity="center"
        android:text=""
        android:textColor="@color/azulEscuro"
        android:textSize="24sp"
        />

</RelativeLayout>